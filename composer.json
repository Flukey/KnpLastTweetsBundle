{
    "name":        "knplabs/knp-last-tweets-bundle",
    "type":        "symfony-bundle",
    "description": "Symfony2 bundle to easily add a widget with the latest tweets of a Twitter user to a page.",
    "keywords":    ["twitter", "tweets", "knplabs", "knp", "bundle"],
    "homepage":    "http://github.com/KnpLabs/KnpLastTweetsBundle",
    "license":     "MIT",

    "authors": [
        {
            "name": "KnpLabs Team",
            "homepage": "http://knplabs.com"
        },
        {
            "name": "Symfony Community",
            "homepage": "http://github.com/KnpLabs/KnpLastTweetsBundle/contributors"
        }
    ],

    "require": {
        "php":                      ">=5.3.2",
        "symfony/framework-bundle": ">=2.0.0",
        "kriswallsmith/buzz":       ">=v0.5",
        "twig/twig":				">=1.6.5"
    },

    "require-dev": {
        "knplabs/knp-zend-cache-bundle": "*",
        "inori/twitter-app-bundle": "*"
    },

    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "abraham/twitteroauth",
                "version": "master-dev",
                "source": {
                    "url": "git://github.com/abraham/twitteroauth.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "zendframework/zend-cache",
                "version": "2.0.0beta1",
                "dist": {
                    "url": "http://github.com/KnpLabs/zend-cache/zipball/master",
                    "type": "zip"
                },
                "source": {
                    "url": "git://github.com/KnpLabs/zend-cache.git",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-0": {
                        "Zend\\Cache": ""
                    }
                },
                "target-dir": "Zend/Cache"
            }
        },
        {
            "type": "package",
            "package": {
                "name": "zendframework/zend-filter",
                "version": "2.0.0beta1",
                "dist": {
                    "url": "http://github.com/KnpLabs/zend-filter/zipball/master",
                    "type": "zip"
                },
                "source": {
                    "url": "git://github.com/KnpLabs/zend-filter.git",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-0": {
                        "Zend\\Filter": ""
                    }
                },
                "target-dir": "Zend/Filter"
            }
        }
    ],

    "autoload": {
        "psr-0": {
            "Knp\\Bundle\\LastTweetsBundle": "."
        }
    },

    "target-dir": "Knp/Bundle/LastTweetsBundle"
}
